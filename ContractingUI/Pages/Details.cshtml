@page
@model ContractingUI.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Contract</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contract.ContractNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contract.ContractNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contract.DateInitiated)
        </dt>
        <dd class="col-sm-10">
            @Model.Contract.DateInitiated.ToString("MM/dd/yyyy")
        </dd>
       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contract.Completed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contract.Completed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contract.CompletedDate)
        </dt>
        <dd class="col-sm-10">
            @Model.Contract.CompletedDate.ToString("MM/dd/yyyy")
           
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contract.Fullfilled)
        </dt>
        <dd class="col-sm-10">
           
            @Model.Contract.Fullfilled.ToString("MM/dd/yyyy")
    
        </dd>
    </dl>
    <p>
        @*<hr/>*@
        <h4>Versions</h4>
       <table>
            <thead>
                <tr>
                    <th width="200">
                       Working Title
                    </th>
                    <th>
                    Start Date
                    </th>
                 
                    <th></th>
                </tr>
            </thead>
        <tbody>
            @foreach (var version in Model.Contract.Versions)

   
 {
    <tr>
     <td>
         @Html.DisplayFor(modelItem => version.WorkingTitle)
     </td>
     <td>
          @version.DateCreated.ToString("MM/dd/yyyy")
     </td>
            </tr>
        }
        </tbody>
        </table>

</div>
<div>
  <br/>
  <br/>
  <a asp-page="./Index">Back to List</a>
</div>
